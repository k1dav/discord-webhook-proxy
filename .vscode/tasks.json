{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Streamlit: 啟動管理介面",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "streamlit",
        "run",
        "src/main.py",
        "--server.port=8501",
        "--server.address=0.0.0.0"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Discord Listener: 啟動",
      "type": "shell",
      "command": "python",
      "args": [
        "discord_listener.py"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "測試: 執行所有測試",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "pytest",
        "-v"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "格式化: Black",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "black",
        "src/",
        "tests/"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "檢查: Ruff",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "ruff",
        "check",
        "src/"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "依賴: 安裝/更新依賴",
      "type": "shell",
      "command": "uv",
      "args": [
        "sync"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "完整工作流: 格式化 + 檢查 + 測試",
      "dependsOn": [
        "格式化: Black",
        "檢查: Ruff",
        "測試: 執行所有測試"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
